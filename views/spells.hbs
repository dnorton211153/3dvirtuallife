<div class="row mx-0">

    <div class="col-8 p-1">
        <div class="row mx-0">
            {{#each spells}}

            <div class="col-xs-1-12">
                <div class="card">
                <div class="card-body tooltipper dragSpot" id={{index}}>
                        {{#if name}}
                        <img id="{{name}}" class="draggable" draggable="true" src="/models/png/{{image}}" quant="{{name}}quant" describedBy="{{name}}desc">
                        <span id="{{name}}desc" class="tooltippertext noClick">{{description}}</span>
                        {{/if}}
                </div>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="row">
            <div class="col-4 text-center">page {{pageNumber}}</div>
            <div id="backPage" class="col-2">{{#if pageNumber}}<button type="button" class="btn btn-primary btn-standard mx-1">-</button>{{/if}}</div>
            <div id="nextPage" class="col-2"><button type="button" class="btn btn-primary btn-standard mr-1">+</button></div>
        </div>
    </div>

    <div class="col-4 spellGrid py-1">
        <div id="f1" class="equipped tooltipper dragSpot"></div>
        <div id="f2" class="equipped tooltipper dragSpot"></div>
        <div id="f3" class="equipped tooltipper dragSpot">
            {{#if equipped.f3}}
                <img id="{{equipped.f3}}" class="draggable" draggable="true" src="/models/png/{{equipped.f3.image}}" quant="{{equipped.f3.name}}quant" describedBy="{{equipped.f3.name}}desc">
                <span id="{{equipped.f3}}desc" class="tooltippertext noClick">{{equipped.f3.description}}</span>
            {{/if}}
        </div>
        <div id="f4" class="equipped tooltipper dragSpot">
            {{#if equipped.f4}}
                <img id="{{equipped.f4}}" class="draggable" draggable="true" src="/models/png/{{equipped.f4.image}}" quant="{{equipped.f4.name}}quant" describedBy="{{equipped.f4.name}}desc">
                <span id="{{equipped.f4}}desc" class="tooltippertext noClick">{{equipped.f4.description}}</span>
            {{/if}}
        </div>
        <div id="f5" class="equipped tooltipper dragSpot"></div>
        <div id="f6" class="equipped tooltipper dragSpot"></div>
        <div id="f7" class="equipped tooltipper dragSpot"></div>
        <div id="f8" class="equipped tooltipper dragSpot"></div>
    </div>


</div>

