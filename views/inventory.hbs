<div class="row mx-0">

    <div class="col-6 p-1">
        <div class="row mx-0 d-flex justify-content-center">
            {{#each inventory}}

            <div class="col-xs-1-12">
                <div class="card">
                <div class="card-body tooltipper dragSpot" id={{index}}>
                        {{#if name}}
                        <img id="{{name}}" class="draggable" draggable="true" src="/models/png/{{image}}" quant="{{name}}quant" describedBy="{{name}}desc">
                        <span id="{{name}}desc" class="tooltippertext noClick">{{description}}</span>
                        <span id="{{name}}quant" class="noClick">{{quantity}}</span>

                        {{/if}}
                </div>
                </div>
            </div>
            {{/each}}

            
        </div>

        <div class="row">
            <div class="col-4 text-center">page {{pageNumber}}</div>
            <div class="col-2">{{#if pageNumber}}<button id="backPage" type="button" class="btn btn-primary btn-standard mx-1">-</button>{{/if}}</div>
            <div class="col-2"><button type="button" id="nextPage" class="btn btn-primary btn-standard mr-1">+</button></div>
        </div>
    </div>

    <div class="col-3 charGrid py-1">
        <div id="head" class="body one tooltipper dragSpot"></div>
        <div id="body" class="body two tooltipper dragSpot"></div>
        <div id="Middle2R_end" class="body three tooltipper dragSpot">
            {{#if equipped.Middle2R_end}}
                <img id="{{equipped.Middle2R_end.name}}" class="draggable" draggable="true" src="/models/png/{{equipped.Middle2R_end.image}}" quant="{{equipped.Middle2R_end.name}}quant" describedBy="{{equipped.Middle2R_end.name}}desc">
                <span id="{{equipped.Middle2R_end.name}}desc" class="tooltippertext noClick">{{equipped.Middle2R_end.description}}</span>
                <span id="{{equipped.Middle2R_end.name}}quant" class="noClick">1</span>
            {{/if}}
        </div>
        <div id="Middle2L_end" class="body four tooltipper dragSpot">
            {{#if equipped.Middle2L_end}}
                <img id="{{equipped.Middle2L_end.name}}" class="draggable" draggable="true" src="/models/png/{{equipped.Middle2L_end.image}}" quant="{{equipped.Middle2L_end.name}}quant" describedBy="{{equipped.Middle2L_end.name}}desc">
                <span id="{{equipped.Middle2L_end.name}}desc" class="tooltippertext noClick">{{equipped.Middle2L_end.description}}</span>
                <span id="{{equipped.Middle2L_end.name}}quant" class="noClick">1</span>
            {{/if}}
        </div>
        <div id="special" class="body five tooltipper dragSpot"></div>
        <div id="feet" class="body six tooltipper dragSpot"></div>
        <div id="drop" class="seven dropOnly"></div>
    </div>

    <div class="col-3 spellGrid py-1 mx-0">
        <div id="f1" class="equipped tooltipper dragSpot">F1</div>
        <div id="f2" class="equipped tooltipper dragSpot"></div>
        <div id="f3" class="equipped tooltipper dragSpot">
            {{#if equipped.f3}}
                <img id="{{equipped.f3}}" class="draggable" draggable="true" src="/models/png/{{equipped.f3.image}}" quant="{{equipped.f3.name}}quant" describedBy="{{equipped.f3.name}}desc">
                <span id="{{equipped.f3}}desc" class="tooltippertext noClick">{{equipped.f3.description}}</span>
            {{/if}}
        </div>
        <div id="f4" class="equipped tooltipper dragSpot">
            {{#if equipped.f4}}
                <img id="{{equipped.f4}}" class="draggable" draggable="true" src="/models/png/{{equipped.f4.image}}" quant="{{equipped.f4.name}}quant" describedBy="{{equipped.f4.name}}desc">
                <span id="{{equipped.f4}}desc" class="tooltippertext noClick">{{equipped.f4.description}}</span>
            {{/if}}
        </div>
        <div id="f5" class="equipped tooltipper dragSpot"></div>
        <div id="f6" class="equipped tooltipper dragSpot"></div>
        <div id="f7" class="equipped tooltipper dragSpot"></div>
        <div id="f8" class="equipped tooltipper dragSpot"></div>
    </div>



</div>

