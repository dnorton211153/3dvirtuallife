<table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>You may level up in the following:</th>
        </tr>
        </thead>
        <tbody>
            {{#each this}}
            <tr>
                <td scope="row">{{category}}</td>
                <td><button type="button" id="{{category}}-{{nextLevel}}" class="btn btn-primary btn-block btn-sm levelUp"><i class="fas fa-level-up-alt noClick"></i></button></td>
            </tr>
            {{/each}}
        </tbody>
</table>
